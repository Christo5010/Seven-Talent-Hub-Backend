# Seven Talent Hub - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings:
# Dashboard > Project Settings > API

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Service Role Key (SECRET - Never expose in frontend!)
# This key bypasses Row Level Security
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Secret (usually same as Supabase JWT Secret)
# Find this in: Dashboard > Project Settings > API > JWT Settings
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Alternative JWT Secret variable name (if different)
JWT_SECRET=your-jwt-secret-here

# Refresh Token Secret (can be same as JWT_SECRET or different for security)
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# ============================================
# TOKEN EXPIRY (OPTIONAL)
# ============================================
# Access token expiry time (default: 15d)
ACCESS_TOKEN_EXPIRY=15d

# Refresh token expiry time (default: 30d)
REFRESH_TOKEN_EXPIRY=30d

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis is used for:
# - Storing refresh tokens
# - Storing password reset codes
# - Storing email verification codes

# Local Redis
REDIS_URL=redis://localhost:6379

# Redis with password (if configured)
# REDIS_URL=redis://:password@localhost:6379

# Redis Cloud / Upstash
# REDIS_URL=redis://default:your-password@your-redis-host:6379

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Used for password reset, email verification, etc.

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port (465 for SSL, 587 for TLS)
SMTP_PORT=465

# SMTP User (your email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (for Gmail, use App Password, not regular password)
# To generate App Password: Google Account > Security > 2-Step Verification > App Passwords
SMTP_PASS=your-app-password-here

# From email address (can be same as SMTP_USER or different)
SMTP_FROM=noreply@sevenopportunity.fr

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# LOGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable detailed error logging in development
DEBUG=false

# ============================================
# QUICK SETUP CHECKLIST
# ============================================
# [ ] Copy this file to .env (cp env.example .env)
# [ ] Fill in SUPABASE_URL
# [ ] Fill in SUPABASE_SERVICE_ROLE_KEY
# [ ] Fill in JWT_SECRET
# [ ] Set up Redis (local or cloud)
# [ ] Configure SMTP settings (for emails)
# [ ] Run database migrations (scripts/supabase-schema.sql)
# [ ] Create storage buckets in Supabase
# [ ] Test connection with: npm run dev



